@page
@{
    ViewData["Title"] = "Página de inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .hero-section {
            background: url('/images/hero-bg2.jpg') no-repeat center center;
            background-size: cover;
            color: #000;
            padding: 100px 20px;
            text-align: center;
            position: relative;
            min-height: 400px;
        }
        .hero-content {
            position: relative;
            z-index: 2;
        }
        .hero-content h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }
        .hero-content p {
            font-size: 1.25rem;
            margin-bottom: 30px;
        }
        .hero-content .btn {
            margin: 10px;
            padding: 10px 20px;
            font-size: 1.125rem;
        }
        footer {
            background-color: #343a40;
            color: #fff;
            padding: 20px 0;
        }
        footer p {
            margin: 0;
        }
    </style>
</head>
<body>
    <header class="hero-section">
        <div class="hero-content text-center">
            <h1>Bienvenido AppFinanzas</h1>
            <p>Administre sus usuarios y gastos de manera eficiente.</p>
            <a href="http://localhost:5001/Api/Usuarios" class="btn btn-primary btn-lg" target="_blank">Ver Usuarios</a>
            <a href="http://localhost:5002/Api/Gastos" class="btn btn-secondary btn-lg" target="_blank">Ver Gastos</a>
        </div>
    </header>
    <footer class="text-center py-4">
        <p>© @DateTime.Now.Year - Tus datos financieros a un clic</p>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

